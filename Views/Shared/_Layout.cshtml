@using System.Security.Principal

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>@ViewData["Title"] - TODO</title>
</head>

<body>
	<div class="container">
		<div class="pull-right">
			@if (!User.Identity.IsAuthenticated) {
				<a asp-controller="Home" asp-action="Register">Register</a>
				<a asp-controller="Home" asp-action="Login">Login</a>
			} else {
				<span>Hi <b>@User.Identity.Name</b></span>
				<form method="POST" asp-controller="Home" asp-action="Logout" style="display: inline;">
					<button type="submit" class="btn btn-xs btn-link">Logout</button>
				</form>
			}
		</div>
		<h1>TODO - @ViewData["Title"]</h1>
		<hr />
		@RenderBody()
	</div>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
		crossorigin="anonymous">
</body>

</html>