@{
	Layout = "_Layout";
	ViewData["Title"] = "Register";
}
@model todo.ViewModels.RegisterUser

<form method="POST" asp-controller="Auth" asp-action="Register">
    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="Username"></label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Username" class="form-control" autofocus />
        </div>
        <span asp-validation-for="Username" class="col-sm-4 text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="Password"></label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Password" class="form-control" />
        </div>
        <span asp-validation-for="Password" class="col-sm-4 text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="Password2"></label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Password2" class="form-control" />
        </div>
        <span asp-validation-for="Password2" class="col-sm-4 text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="row offset-sm-2 text-danger"></div>
    <br />
    <div class="form-row row">
        <div class="offset-sm-2 col-sm-4">
            <input type="submit" value="Register" class="btn btn-primary" />
        </div>
    </div>
</form>